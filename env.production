# Production Environment Configuration
# Copy this file to .env and update values for your production environment

# =============================================================================
# MODEL CONFIGURATION
# =============================================================================

# Primary models for different tasks
TEXT_MODEL=ollama:mistral-small3.1:latest
VISION_MODEL=ollama:llava:latest

# Fallback models when primary models fail
FALLBACK_TEXT_MODEL=ollama:llama3.2:latest
FALLBACK_VISION_MODEL=ollama:granite3.2-vision

# Ollama server configuration
OLLAMA_HOST=http://ollama:11434
OLLAMA_TIMEOUT=30

# Model parameters
TEXT_TEMPERATURE=0.1
TEXT_MAX_TOKENS=200
VISION_TEMPERATURE=0.7
VISION_MAX_TOKENS=200

# Tool calling configuration
ENABLE_TOOL_CALLING=true
MAX_TOOL_CALLS=5

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================

# Worker configuration
MAX_WORKERS=4
CHUNK_SIZE=1200
OVERLAP_SIZE=100

# Processing limits
MAX_FILE_SIZE=100MB
MAX_PROCESSING_TIME=300

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# API Security
API_KEY=your-secure-api-key-here
CORS_ORIGINS=https://your-domain.com,https://www.your-domain.com
RATE_LIMIT=100

# Authentication
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# =============================================================================
# MONITORING AND LOGGING
# =============================================================================

# Logging configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=/app/logs/sentiment.log

# Metrics and monitoring
ENABLE_METRICS=true
PROMETHEUS_PORT=9090
SENTRY_DSN=your-sentry-dsn-here

# Health check settings
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10

# =============================================================================
# STORAGE CONFIGURATION
# =============================================================================

# ChromaDB settings
CHROMA_PERSIST_DIRECTORY=/app/data/chroma
CHROMA_ANONYMIZED_TELEMETRY=false

# Cache settings
CACHE_DIRECTORY=/app/cache
CACHE_TTL=3600

# Redis configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# =============================================================================
# NETWORK AND SERVER SETTINGS
# =============================================================================

# Server configuration
HOST=0.0.0.0
MCP_PORT=8000
API_PORT=8002

# SSL/TLS settings (for production)
SSL_CERT_FILE=/app/ssl/cert.pem
SSL_KEY_FILE=/app/ssl/key.pem

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# Translation services (optional)
GOOGLE_TRANSLATE_API_KEY=
DEEPL_API_KEY=

# File storage (optional)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=

# =============================================================================
# DEVELOPMENT VS PRODUCTION
# =============================================================================

# Environment
NODE_ENV=production
DEBUG=false

# Database settings
DATABASE_URL=sqlite:///app/data/sentiment.db

# =============================================================================
# BACKUP AND MAINTENANCE
# =============================================================================

# Backup settings
BACKUP_ENABLED=true
BACKUP_INTERVAL=24h
BACKUP_RETENTION_DAYS=30

# Cleanup settings
CLEANUP_ENABLED=true
CLEANUP_INTERVAL=6h
TEMP_FILE_RETENTION_HOURS=24
