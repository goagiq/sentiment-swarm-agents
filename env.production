# Production Environment Configuration for Sentiment Analysis Swarm (Phases 1-5)

# =============================================================================
# CORE CONFIGURATION
# =============================================================================
NODE_ENV=production
LOG_LEVEL=INFO
ENABLE_METRICS=true
MAX_WORKERS=4
APP_NAME=sentiment-analysis-swarm
APP_VERSION=1.0.0

# =============================================================================
# API CONFIGURATION
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8003
MCP_PORT=8000
STREAMLIT_MAIN_PORT=8501
STREAMLIT_LANDING_PORT=8502
API_TIMEOUT=30
MAX_REQUEST_SIZE=100MB

# =============================================================================
# MODEL CONFIGURATION
# =============================================================================
TEXT_MODEL=ollama:mistral-small3.1:latest
VISION_MODEL=ollama:llava:latest
FALLBACK_TEXT_MODEL=ollama:llama3.2:latest
FALLBACK_VISION_MODEL=ollama:granite3.2-vision

# =============================================================================
# OLLAMA CONFIGURATION
# =============================================================================
OLLAMA_HOST=http://ollama-service:11434
OLLAMA_TIMEOUT=30
TEXT_TEMPERATURE=0.1
TEXT_MAX_TOKENS=200
VISION_TEMPERATURE=0.7
VISION_MAX_TOKENS=200
ENABLE_TOOL_CALLING=true
MAX_TOOL_CALLS=5

# =============================================================================
# PROCESSING CONFIGURATION
# =============================================================================
CHUNK_SIZE=1200
OVERLAP_SIZE=100
ENABLE_DUPLICATE_DETECTION=true
DUPLICATE_THRESHOLD=0.8

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
REDIS_HOST=redis-service
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_MAX_CONNECTIONS=20
REDIS_CONNECTION_TIMEOUT=5

# =============================================================================
# VECTOR DATABASE CONFIGURATION
# =============================================================================
VECTOR_DB_TYPE=chromadb
CHROMA_DB_PATH=/app/cache/chroma_db
ENABLE_VECTOR_SEARCH=true

# =============================================================================
# PHASE 5: SEMANTIC SEARCH & REFLECTION CONFIGURATION
# =============================================================================
ENABLE_SEMANTIC_SEARCH=true
ENABLE_AGENT_REFLECTION=true
SEMANTIC_SEARCH_MODEL=sentence-transformers/all-MiniLM-L6-v2
REFLECTION_ENABLED=true
MAX_REFLECTION_ITERATIONS=3
CONFIDENCE_THRESHOLD=0.7
AUTO_COMBINE_RESULTS=true
INTELLIGENT_ROUTING=true
REFLECTION_COORDINATOR_ENABLED=true
AGENT_QUESTIONING_ENABLED=true

# =============================================================================
# PHASE 4: EXPORT & AUTOMATION CONFIGURATION
# =============================================================================
ENABLE_REPORT_GENERATION=true
ENABLE_DATA_EXPORT=true
EXPORT_FORMATS=pdf,excel,html,json
REPORT_TEMPLATES_PATH=/app/templates
AUTO_REPORT_SCHEDULING=true
REPORT_RETENTION_DAYS=30

# =============================================================================
# PHASE 3: ADVANCED ANALYTICS CONFIGURATION
# =============================================================================
ENABLE_KNOWLEDGE_GRAPH=true
ENABLE_ENTITY_EXTRACTION=true
ENABLE_MULTIMODAL_ANALYSIS=true
KNOWLEDGE_GRAPH_PATH=/app/data/knowledge_graph
ENTITY_EXTRACTION_MODEL=en_core_web_sm

# =============================================================================
# PHASE 2: BUSINESS INTELLIGENCE CONFIGURATION
# =============================================================================
ENABLE_BUSINESS_INTELLIGENCE=true
ENABLE_DATA_VISUALIZATION=true
ENABLE_SOCIAL_MEDIA_ANALYSIS=true
ENABLE_EXTERNAL_DATA_INTEGRATION=true
ENABLE_MARKET_DATA_ANALYSIS=true

# =============================================================================
# SECURITY CONFIGURATION (ENHANCED)
# =============================================================================
ENABLE_AUTHENTICATION=true
API_KEY_REQUIRED=true
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60
ENABLE_SSL=true
SSL_CERT_PATH=/etc/ssl/certs/sentiment-analysis.crt
SSL_KEY_PATH=/etc/ssl/private/sentiment-analysis.key
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
ENABLE_INPUT_VALIDATION=true
ENABLE_SANITIZATION=true
MAX_FILE_SIZE=50MB
ALLOWED_FILE_TYPES=pdf,txt,doc,docx,mp3,mp4,jpg,jpeg,png
ENABLE_AUDIT_LOGGING=true
AUDIT_LOG_PATH=/app/logs/audit.log

# =============================================================================
# MONITORING CONFIGURATION (ENHANCED)
# =============================================================================
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
GRAFANA_ENABLED=true
GRAFANA_PORT=3000
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30
ENABLE_APM=true
APM_SERVICE_NAME=sentiment-analysis-swarm
APM_ENVIRONMENT=production
ENABLE_DISTRIBUTED_TRACING=true
JAEGER_ENDPOINT=http://jaeger:14268/api/traces
ENABLE_METRICS_EXPORT=true
METRICS_EXPORT_INTERVAL=60
ENABLE_ALERTING=true
ALERT_WEBHOOK_URL=https://your-alerting-service.com/webhook

# =============================================================================
# STORAGE CONFIGURATION
# =============================================================================
DATA_PATH=/app/data
CACHE_PATH=/app/cache
LOGS_PATH=/app/logs
TEMP_PATH=/app/temp
RESULTS_PATH=/app/Results
BACKUP_PATH=/app/backups
BACKUP_RETENTION_DAYS=30
ENABLE_AUTO_BACKUP=true
BACKUP_SCHEDULE=0 2 * * *

# =============================================================================
# PERFORMANCE CONFIGURATION (ENHANCED)
# =============================================================================
ENABLE_CACHING=true
CACHE_TTL=3600
ENABLE_COMPRESSION=true
ENABLE_ASYNC_PROCESSING=true
MAX_CONCURRENT_REQUESTS=10
ENABLE_CONNECTION_POOLING=true
DB_POOL_SIZE=10
DB_POOL_TIMEOUT=30
ENABLE_LOAD_BALANCING=true
ENABLE_CIRCUIT_BREAKER=true
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=60
ENABLE_RETRY_MECHANISM=true
MAX_RETRY_ATTEMPTS=3
RETRY_DELAY=1000

# =============================================================================
# ERROR HANDLING CONFIGURATION (ENHANCED)
# =============================================================================
ENABLE_ERROR_REPORTING=true
ERROR_NOTIFICATION_ENABLED=true
ERROR_RETRY_ATTEMPTS=3
ERROR_RETRY_DELAY=5
ERROR_SLACK_WEBHOOK=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
ERROR_EMAIL_NOTIFICATION=false
ERROR_EMAIL_SMTP_HOST=smtp.gmail.com
ERROR_EMAIL_SMTP_PORT=587
ERROR_EMAIL_FROM=alerts@yourdomain.com
ERROR_EMAIL_TO=admin@yourdomain.com
ENABLE_ERROR_AGGREGATION=true
ERROR_AGGREGATION_WINDOW=300

# =============================================================================
# BACKUP AND RECOVERY CONFIGURATION
# =============================================================================
ENABLE_AUTOMATED_BACKUPS=true
BACKUP_FREQUENCY=daily
BACKUP_TIME=02:00
BACKUP_COMPRESSION=true
BACKUP_ENCRYPTION=true
BACKUP_ENCRYPTION_KEY=your-backup-encryption-key
ENABLE_BACKUP_VERIFICATION=true
BACKUP_RETENTION_POLICY=30_days
ENABLE_DISASTER_RECOVERY=true
DR_RECOVERY_POINT_OBJECTIVE=1_hour
DR_RECOVERY_TIME_OBJECTIVE=4_hours

# =============================================================================
# EXTERNAL INTEGRATIONS CONFIGURATION
# =============================================================================
# ERP System Integration
ERP_SAP_ENDPOINT=https://sap.yourdomain.com/api
ERP_SAP_API_KEY=your-sap-api-key
ERP_ORACLE_ENDPOINT=https://oracle.yourdomain.com/api
ERP_ORACLE_API_KEY=your-oracle-api-key

# CRM System Integration
CRM_SALESFORCE_ENDPOINT=https://your-instance.salesforce.com/api
CRM_SALESFORCE_CLIENT_ID=your-salesforce-client-id
CRM_SALESFORCE_CLIENT_SECRET=your-salesforce-client-secret
CRM_HUBSPOT_ENDPOINT=https://api.hubapi.com
CRM_HUBSPOT_API_KEY=your-hubspot-api-key

# BI Tool Integration
BI_TABLEAU_ENDPOINT=https://tableau.yourdomain.com/api
BI_TABLEAU_USERNAME=your-tableau-username
BI_TABLEAU_PASSWORD=your-tableau-password
BI_POWERBI_ENDPOINT=https://api.powerbi.com
BI_POWERBI_CLIENT_ID=your-powerbi-client-id
BI_POWERBI_CLIENT_SECRET=your-powerbi-client-secret

# =============================================================================
# DEVELOPMENT/DEBUG CONFIGURATION (DISABLED IN PRODUCTION)
# =============================================================================
DEBUG_MODE=false
ENABLE_DEBUG_LOGGING=false
ENABLE_PROFILING=false
ENABLE_TEST_ENDPOINTS=false
ENABLE_DEVELOPMENT_TOOLS=false
